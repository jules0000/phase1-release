# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
# MySQL is REQUIRED for both development and production
# SQLite is NOT supported - you MUST set DATABASE_URL to a MySQL connection string
# Uncomment and configure with your MySQL credentials:
DATABASE_URL=mysql+pymysql://root@127.0.0.1:3306/neural?charset=utf8mb4
# Example format: mysql+pymysql://username:password@host:port/database?charset=utf8mb4

# P0-001 Fix: Database connection pool settings (optional, defaults shown)
# DB_POOL_SIZE=100
# DB_MAX_OVERFLOW=200

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Groq Configuration
GROQ_API_KEY=your-groq-api-key-here

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://127.0.0.1:11434

# Default AI Model Settings
DEFAULT_AI_MODEL=gpt-3.5-turbo
AI_TIMEOUT=60
AI_MAX_RETRIES=3

# Redis Configuration (for production)
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
# P0-004 Fix: Use CORS_ALLOWED_ORIGINS for origin whitelist (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# Storage Configuration (AWS S3)
# Set STORAGE_TYPE=s3 to use S3, otherwise uses local storage
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# S3_BUCKET_NAME=your-s3-bucket-name
# AWS_REGION=us-east-1
# CDN_URL=https://your-cdn.cloudfront.net  # Optional: CloudFront CDN URL

# Rate Limiting
RATELIMIT_STORAGE_URL=memory://

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Sentry Configuration (Error Tracking & Performance Monitoring)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
APP_VERSION=1.0.0